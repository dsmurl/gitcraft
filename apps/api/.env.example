# GitHub OAuth App credentials (required)
GITHUB_CLIENT_ID=your_client_id
GITHUB_CLIENT_SECRET=your_client_secret

# Clerk keys (required by Clerk middleware)
# Get this from Clerk Dashboard -> API Keys -> Publishable Key
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key

# Web app origin allowed for CORS (dev convenience)
# Set to your web app URL so the browser can call the API with Authorization header
WEB_ORIGIN=http://localhost:5173

# API server port (defaults to 3001 if not set)
API_PORT=3001

# Optional counters (uncomment if used by your API)
COUNTER_INITIAL=0
COUNTER_STEP=1