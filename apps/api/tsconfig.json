{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@gitcraft/db": ["../../../libs/drizzle/src/index.ts"],
      "@gitcraft/db/*": ["../../../libs/drizzle/src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "express-session"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
